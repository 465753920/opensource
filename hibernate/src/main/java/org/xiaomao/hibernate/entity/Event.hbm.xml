<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.xiaomao.hibernate.entity">
	<class name="Event" table="EVENTS">
		<meta attribute="class-description">
			This class contains the event detail.
		</meta>
		<id name="id" column="ID">
			<generator class="native" />
		</id>
		<property name="title" column="TITLE"></property>
		<property name="date" column="EVENT_DATE" type="timestamp"></property>
		<set name="persons" table="PERSON_EVENT">
			<key column="EVENT_ID"></key>
			<many-to-many column="PERSON_ID" class="Person"></many-to-many>
		</set>
	</class>
</hibernate-mapping>